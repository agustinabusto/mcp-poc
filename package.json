{
  "name": "afip-monitor-mcp",
  "version": "1.0.0",
  "description": "Monitor automÃ¡tico AFIP con alertas proactivas y compliance checker",
  "type": "module",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "node --watch src/server/index.js",
    "client": "vite src/client --host 0.0.0.0 --port 3000",
    "build": "vite build src/client",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "setup": "node scripts/setup.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed-data.js",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "docker:build": "docker build -t afip-monitor-mcp .",
    "docker:run": "docker run -p 8080:8080 afip-monitor-mcp",
    "docker:stop": "docker-compose down",
    "setup:dirs": "node scripts/setup.js",
    "clean": "rm -rf dist coverage .nyc_output",
    "clean:data": "rm -rf data/*.db logs/*.log",
    "docker:dev": "docker-compose --profile development up -d",
    "reset": "npm run clean && npm run clean:data && npm install",
    "docker:prod": "docker-compose --profile production up -d",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "afip",
    "compliance",
    "monitoring",
    "mcp",
    "argentina",
    "fiscal"
  ],
  "author": "Snarx.io",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "jsonschema": "^1.4.1",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.3",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "validator": "^13.11.0",
    "moment-timezone": "^0.5.43",
    "nodemailer": "^6.9.7",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.5",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "vite": "^4.5.0",
    "jest": "^29.7.0",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-react": "^7.23.3",
    "babel-jest": "^29.7.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.4",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "supertest": "^6.3.3",
    "puppeteer": "^21.5.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/snarx-io/afip-monitor-mcp.git"
