# AFIP Monitor MCP - Environment Variables

# Servidor
NODE_ENV=development
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=info

# Base de datos
DATABASE_URL=./data/afip_monitor.db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# AFIP Configuration
AFIP_MOCK_MODE=true
AFIP_BASE_URL=https://aws.afip.gov.ar/sr-padron/v2
AFIP_TIMEOUT=30000
AFIP_MAX_RETRIES=3

# AFIP Certificates (Producci√≥n)
AFIP_CERT_PATH=./certs/certificate.crt
AFIP_KEY_PATH=./certs/private.key
AFIP_PASSPHRASE=your_passphrase

# Cache
CACHE_TTL=300000
CACHE_MAX_SIZE=1000

# Notificaciones
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=afip-monitor@localhost

# Slack Webhook
SLACK_WEBHOOK_URL=

# Redis (opcional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Features
ENABLE_WEBSOCKET=true
ENABLE_NOTIFICATIONS=true
ENABLE_BACKGROUND_PROCESSING=true
