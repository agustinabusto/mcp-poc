{
    "name": "AFIP Monitor MCP - AI Bookkeeper Assistant",
    "short_name": "AFIP Monitor",
    "description": "Monitor automático AFIP con alertas proactivas y compliance checker desarrollado usando Model Context Protocol",
    "version": "1.0.0",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#ffffff",
    "theme_color": "#0066cc",
    "orientation": "portrait-primary",
    "scope": "/",
    "lang": "es-AR",
    "dir": "ltr",
    "icons": [
        {
            "src": "/icons/icon-72x72.png",
            "sizes": "72x72",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
