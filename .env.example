# AFIP Monitor MCP - Environment Variables

# Servidor
NODE_ENV=development
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=info

# Base de datos
DATABASE_URL=./data/afip_monitor.db

# AFIP Configuration
AFIP_MOCK_MODE=true
AFIP_BASE_URL=https://aws.afip.gov.ar/sr-padron/v2
AFIP_TIMEOUT=30000

# AFIP Certificates (Producci√≥n)
AFIP_CERT_PATH=./certs/certificate.crt
AFIP_KEY_PATH=./certs/private.key
AFIP_PASSPHRASE=your_passphrase

# Cliente React
VITE_API_BASE_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080

# CORS
CORS_ORIGIN=http://localhost:3000

# Notificaciones (Opcional)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# JWT Secret (Opcional)
JWT_SECRET=your-super-secret-jwt-key-here

# Logging
LOG_DIR=./logs
LOG_FILE=afip-monitor.log

# Monitoring (Opcional)
ENABLE_METRICS=true
METRICS_PORT=9090