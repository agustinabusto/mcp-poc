{
  "name": "afip-monitor-mcp",
  "version": "1.0.0",
  "description": "AI Bookkeeper Assistant - AFIP Monitor MCP Server with OCR capabilities",
  "type": "module",
  "main": "src/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/server/index.js",
    "dev:client": "vite --port 3000 src/client",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build src/client",
    "build:server": "echo 'Server build not needed for Node.js'",
    "start": "node src/server/index.js",
    "start:prod": "NODE_ENV=production node src/server/index.js",
    "migrate": "npm run migrate:ocr && npm run migrate:fiscal",
    "migrate:ocr": "node src/database/migrate-ocr.js",
    "migrate:fiscal": "node src/database/migrate-fiscal-verification.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:fiscal": "jest tests/fiscal-verification.test.js",
    "test:integration": "jest tests/integration/",
    "test:e2e": "playwright test",
    "db:reset": "npm run db:clean && npm run migrate",
    "db:clean": "rm -f data/*.db",
    "db:backup": "cp data/afip_monitor.db data/backup_$(date +%Y%m%d_%H%M%S).db",
    "db:restore": "cp data/backup_*.db data/afip_monitor.db",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "validate:hu001": "npm run test:fiscal && npm run lint && npm run build",
    "deploy:staging": "npm run validate:hu001 && echo 'Deploy to staging'",
    "deploy:prod": "npm run validate:hu001 && echo 'Deploy to production'"
  },
  "keywords": [
    "afip",
    "compliance",
    "monitoring",
    "mcp",
    "argentina",
    "fiscal",
    "react",
    "nodejs"
  ],
  "author": "Snarx.io",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "groq-sdk": "^0.26.0",
    "jimp": "^0.22.10",
    "jsonschema": "^1.5.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.525.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-forge": "^1.3.1",
    "node-schedule": "^2.1.1",
    "nodemailer": "^7.0.4",
    "openai": "^4.104.0",
    "pdf-parse": "^1.1.1",
    "sharp": "^0.33.5",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tesseract.js": "^5.1.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@playwright/test": "^1.54.1",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "supertest": "^7.1.3",
    "tailwindcss": "^3.3.5",
    "vite": "^4.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/client/dist/**",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      },
      "src/server/routes/fiscal-verification.js": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "testTimeout": 10000
  },
  "nodemonConfig": {
    "watch": [
      "src/server"
    ],
    "ext": "js,json",
    "ignore": [
      "tests/",
      "src/client/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}