{
  "name": "afip-monitor-mcp",
  "version": "1.0.0",
  "description": "Monitor automÃ¡tico AFIP con alertas proactivas y compliance checker",
  "type": "module",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "node --watch src/server/index.js",
    "dev:client": "vite src/client --host 0.0.0.0 --port 3000",
    "build": "vite build",
    "build:client": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "setup": "node scripts/setup.js",
    "setup:dirs": "mkdir -p src/client src/server data logs public",
    "clean": "rm -rf dist coverage node_modules/.cache",
    "clean:data": "rm -rf data/*.db logs/*.log",
    "docker:build": "docker build -t afip-monitor-mcp .",
    "docker:run": "docker run -p 8080:8080 -p 3000:3000 afip-monitor-mcp",
    "docker:dev": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "reset": "npm run clean && npm install"
  },
  "keywords": [
    "afip",
    "compliance",
    "monitoring",
    "mcp",
    "argentina",
    "fiscal",
    "react",
    "nodejs"
  ],
  "author": "Snarx.io",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.3",
    "node-forge": "^1.3.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.5",
    "vite": "^4.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
